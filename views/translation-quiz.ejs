<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Translation Quiz</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f7f9fc;
        }
        header {
            background: #007bff;
            color: #fff;
            text-align: center;
            padding: 1rem;
        }
        main {
            margin: 2rem auto;
            width: 80%;
            max-width: 700px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        button {
            background: #007bff;
            color: #fff;
            border: none;
            padding: 0.8rem 1.2rem;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
        }
        button:hover {
            background: #0056b3;
        }
        form > div {
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <header>
        <h1>Translation Quiz</h1>
    </header>
    <main>
        <form action="/translation-quiz/submit" method="POST">
            <% questions.forEach((question, index) => { %>
                <div>
                    <h3>Question <%= index + 1 %>:</h3>
                    <p><strong>Translation:</strong> <%= question.translation %></p>
                    <% question.options.forEach((option, optIndex) => { %>
                        <label>
                            <input type="radio" name="answers[<%= question.id %>]" value="<%= option %>" required>
                            <%= option %>
                        </label><br>
                    <% }); %>
                </div>
            <% }); %>
            <button type="submit">Submit Quiz</button>
        </form>
    </main>
</body>
</html>
